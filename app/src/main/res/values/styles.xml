<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="HoritationProgressBar">
        <attr name="color_reach" format="color"/>
        <attr name="color_unreach" format="color"/>
        <attr name="color_text" format="color"/>
        <attr name="reach_height" format="dimension"/>
        <attr name="unreach_height" format="dimension"/>
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
</resources>
